<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wakeup_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/II_Dimen"
    tools:context=".settings.SettingsFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/I_Dimen"
        android:text="Wake up time"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/wakeup_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/II_Dimen"
        android:layout_marginLeft="@dimen/II_Dimen"
        android:layout_marginBottom="@dimen/I_Dimen"
        android:text="8:00 am" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>
