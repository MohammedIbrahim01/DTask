<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/achievement_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:fontFamily="casual"
        android:textSize="32sp"
        tools:text="Title" />


    <TextView
        android:id="@+id/achievement_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/achievement_title_textView"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/achievement_title_textView"
        android:layout_toRightOf="@+id/achievement_title_textView"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="18sp"
        tools:text="this is the descroption of the task" />

</RelativeLayout>